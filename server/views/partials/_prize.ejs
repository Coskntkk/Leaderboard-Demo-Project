<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2>Prize <b>Management</b></h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Prize</th>
                        <th>Add</th>
                        <th>Reset</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th><%= prize %></th>
                        <th>
                            <button type="button" class="btn btn-success" data-bs-toggle="modal"
                                data-bs-target="#addPrizeModal">
                                Add Prize
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="addPrizeModal" tabindex="-1">
                                <div class="modal-dialog">
                                    <form action="/prize?admin=true" method="POST">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <label class="form-label">Prize</label>
                                                <input type="number" class="form-control" name="money">
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-success">Add</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </th>
                        <th>
                            <!-- Delete player modal -->
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                data-bs-target="#resetPrizeModal">
                                Reset
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="resetPrizeModal" tabindex="-1">
                                <div class="modal-dialog">
                                    <form action="/prize/reset?admin=true" method="POST">
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                Are you sure you want to reset prize?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-danger">Reset</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </th>   
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>